@model Medpharma.Web.Models.AdmissionViewModel
@{
    ViewData["Title"] = "Create";
}
@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
    <div class="card mb-4">
        <h5 class="card-header bg-primary text-white">Create Admission</h5>
        
        <hr class="my-0">
        <div class="card-body">
            <form id="form1" asp-action="Create" method="POST" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CustomerId" />


                <div class="row">

                    <div class="mb-3 col-md-6">
                        <label class="form-label">Name</label>
                        <label class="form-control bg-white" readonly>@Html.DisplayFor(model => model.Customer.FullName)</label>
                    </div>

                </div>

                <div class="row">
                    <div class="mb-3 col-md-3">
                        <label class="form-label">Cititzen ID</label>
                        <label class="form-control bg-white" readonly="">@Html.DisplayFor(model => model.Customer.Document)</label>
                    </div>

                    <div class="mb-3 col-md-3">
                        <label class="form-label">Phone Number</label>
                        <label class="form-control bg-white" readonly="">@Html.DisplayFor(model => model.Customer.PhoneNumber)</label>
                    </div>
                </div>

                <div class="mb-3 col-md-6">
                    <label asp-for="Notes" class="form-label">@Html.DisplayNameFor(model => model.Notes)</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>


                <div class="mt-2">
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                </div>
            </form>
        </div>
    </div>
