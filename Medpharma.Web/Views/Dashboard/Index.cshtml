                        <div class="card-title mb-0">
                            <h5 class="m-0 me-2 pb-5">My Orders</h5>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive text-nowrap">
                            <table class="table" id="tableCustomerOrders">
                                <thead>
                                    <tr>
                                        <th scope="col">No. #</th>
                                        <th scope="col">Ordered</th>
                                    <th scope="col" class="text-center" >Status</th>
                                        <th scope="col">Amount</th>
                                    </tr>
                                </thead>
                                <tbody class="table-border-bottom-0">
                                    @foreach (var item in Model.OrdersByCustomer)
                                    {
                                        <tr>
                                            <td>@item.Id.ToString()</td>
                                            <td>@item.OrderDate</td>
                                        <td class="text-center">
                                            @if (item.OrderSent == 0)
                                            {
                                                <span class="badge bg-label-warning me-1">Preparing</span>
                                            }

                                            @if (item.OrderSent == 1)
                                            {
                                                <span class="badge bg-label-success me-1">Order Sent</span>
                                            }
                                        </td>
                                            <td>@item.CValue.ToString("c2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
