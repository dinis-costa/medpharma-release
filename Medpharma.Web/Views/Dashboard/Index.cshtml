                                                </td>
                                            }
                                            else
                                            {
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Timeslot.Slot)
                                                </td>
                                            }
                                            @*<td>@Html.DisplayFor(modelItem => item.Timeslot.Slot)</td>*@
