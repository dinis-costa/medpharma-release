@model Medpharma.Web.Models.DoctorViewModel

<div class="mb-3 col-md-6">
    <label asp-for="FirstName" class="form-label">First Name</label>
    <input asp-for="FirstName" type="text" class="form-control" placeholder="Name">
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="mb-3 col-md-6">
    <label asp-for="LastName" class="form-label">Last Name</label>
    <input asp-for="LastName" type="text" class="form-control" placeholder="Surname">
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="mb-3 col-md-3">
    <label asp-for="Document" class="form-label">Citizen ID</label>
    <input asp-for="Document" type="text" class="form-control" placeholder="123456789">
    <span asp-validation-for="Document" class="text-danger"></span>
</div>
<div class="mb-3 col-md-3">
    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
    <input asp-for="PhoneNumber" type="text" class="form-control" required minlength="9" maxlength="9" placeholder="912345678">
    <span asp-validation-for="PhoneNumber" type="text" class="text-danger"></span>
</div>
<div class="mb-3 col-md-6">
    <label asp-for="Email" class="form-label">E-mail</label>
    <input asp-for="Email" type="email" class="form-control" required placeholder="email@email.com">
    <span asp-validation-for="Email" type="email" class="text-danger"></span>
</div>
<div class="mb-3 col-md-4">
    <label asp-for="Speciality" class="form-label">Speciality</label>
    @Html.DropDownList("SpecialityId", new SelectList((System.Collections.IEnumerable)ViewData["Specialities"], "Id", "Name"), "Select Speciality...", new { @class = "form-select" })
    <span asp-validation-for="SpecialityId" class="text-danger"></span>
</div>