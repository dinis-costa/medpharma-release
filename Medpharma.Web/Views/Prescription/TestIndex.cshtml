@model IEnumerable<Medpharma.Web.Data.Entities.Medicine>
@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#tableCustomers').DataTable();
        });
    </script>
}
    <div class="card">
        <div class="card-header">

            @*<h5 class="card-header">Table Basic</h5>*@

            <div class="d-flex justify-content-between d-sm-flex align-items-center justify-content-between">
                <h5 class="card-header mb-0 text-gray-800 my-2">Doctors</h5>
                <a asp-action="Create" class="btn btn-primary btn-sm d-none d-sm-inline-block">Create Doctor</a>
            </div>


            @*<div class="d-sm-flex align-items-center justify-content-between">
        <h1 class="h3 mb-0 text-gray-800 my-2">Management Rounds View All</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">Add New</a>
        </div>*@

        </div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">

                <table class="table" id="tableCustomers">
                    <thead>
                        <tr>
                            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                            @*<th scope="col" class="col-4"></th>*@
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                <div class="dropdown position-absolute">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a asp-action="Create" asp-controller="Admissions" class="dropdown-item"><i class="bx bx-trash me-1"></i> Admission</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bx-detail me-1"></i> Details</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>