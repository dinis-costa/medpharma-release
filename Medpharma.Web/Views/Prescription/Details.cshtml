@model Medpharma.Web.Data.Entities.Prescription

@{
    ViewData["Title"] = "Prescription";
}

<div class="card mb-4">
    <h5 class="card-header">Prescription #@Model.Id</h5>
    <hr class="my-0">
    <div class="card-body">

        @if (Model.MedicineId == null)
        {
            <div class="row">
                <div class="mb-3 col-md-2">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Number)</label>
                    <label class="form-control" readonly="">@Html.DisplayFor(model => model.Number)</label>
                </div>
                <div class="mb-3 col-md-2">
                    <label class="form-label">@Html.DisplayNameFor(model => model.ExpirationDate)</label>
                    <label class="form-control" readonly="">@Html.DisplayFor(model => model.ExpirationDate)</label>
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Exam)</label>
                    <label class="form-control" readonly="">@Html.DisplayFor(model => model.Exam.Name)</label>
                </div>
            </div>
              
        }

        @if (Model.ExamId == null)
        {
            <div class="row">
                <div class="mb-3 col-md-2">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Number)</label>
                    <label class="form-control" readonly="">@Html.DisplayFor(model => model.Number)</label>
                </div>
                <div class="mb-3 col-md-2">
                    <label class="form-label">@Html.DisplayNameFor(model => model.ExpirationDate)</label>
                    <label class="form-control" readonly="">@Html.DisplayFor(model => model.ExpirationDate)</label>
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Medicine)</label>
                    <label class="form-control" readonly="">@Html.DisplayFor(model => model.Medicine.Name)</label>
                </div>
                <div class="mb-3 col-md-1">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Quantity)</label>
                    <label class="form-control" readonly="">@Html.DisplayFor(model => model.Quantity)</label>
                </div>
            </div>
        }

        <div class="row">

            <label asp-for="Observations"></label>
            <div class="mb-3 col-md-6">

                <textarea asp-for="@Model.Observations" disabled class="form-control text-left" id="exampleFormControlTextarea1" rows="5">

                </textarea>

            </div>

        </div>
        <hr />
        <div class="mt-2">
            <button href="##" onClick="history.go(-1); return false;" class="btn btn-primary">Back</button>
        </div>
    </div>
</div>