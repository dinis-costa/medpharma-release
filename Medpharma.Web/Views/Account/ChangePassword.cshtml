@model Medpharma.Web.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Password";
}

<form id="form1" asp-action="ChangePassword" method="POST" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card mb-4">
        <h5 class="card-header">Password Settings</h5>
        <hr class="my-0">
        <div class="card-body">
            <div class="mb-3 col-md-6">
                <label class="form-label" asp-for="OldPassword">Current password</label>
                <input asp-for="OldPassword" type="password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                <span asp-validation-for="OldPassword" class="text-warning"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label" asp-for="NewPassword">New password</label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                <span asp-validation-for="NewPassword" class="text-warning"></span>
            </div>
            <div class="mb-3 col-md-6">
                <label class="form-label" asp-for="Confirm">Confirm</label>
                <input asp-for="Confirm" type="password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" />
                <span asp-validation-for="Confirm" class="text-warning"></span>
            </div>
        </div>
        <hr class="my-0">
        <div class="card-body">
            <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Save Changes</button>
                <button asp-action="EditProfile" class="btn btn-outline-secondary">Cancel</button>
            </div>
        </div>
    </div>
</form>
