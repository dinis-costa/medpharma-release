@model Medpharma.Web.Data.Entities.Exam

@{
    ViewData["Title"] = "Exams";
}

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
            <h5 class="card-header bg-primary text-white">New Exam Type</h5>
        <hr class="my-0">
        <div class="card-body">

            <div class="mb-4 col-md-4">
                <label asp-for="Name" class="form-label">Description</label>
                <input asp-for="Name" type="text" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4 col-md-2">
                <label asp-for="Price" class="form-label">Price (Unit)</label>
                <input asp-for="Price" type="text" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

        </div>
        <hr class="my-0">
        <div class="card-body">
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary me-2">Create</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
        </div>
    </div>
</form>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

