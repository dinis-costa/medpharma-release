@model IEnumerable<Medpharma.Web.Data.Entities.Customer>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready( function () {
            $('#tableCustomers').DataTable();
            } );
    </script>
}

        <div class="card">
            <div class="card-header">

            @*<h5 class="card-header">Table Basic</h5>*@

                <div class="d-flex justify-content-between d-sm-flex align-items-center justify-content-between">
                    <h5 class="card-header mb-0 text-gray-800 my-2">Patients</h5>
                    <a asp-action="Create" class="btn btn-success btn-sm d-none d-sm-inline-block">Add New</a>
            </div>

            </div>
        <div class="card-body">
            <div class="table-responsive text-nowrap">

            <table class="table" id="tableCustomers">

                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                            <th scope="col">@Html.DisplayNameFor(model => model.Document)</th>
                            <th scope="col"></th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>

                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelItem => item.FullName)</strong></td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Document)</td>
                            <td class="text-center">
                                <a value="Admit" asp-action="Create" asp-controller="Admission" asp-route-customerString="@item.Id" class="btn btn-primary btn-sm mb-1"><i class="bx bx-user-check me-1"></i> Admit</a>
                            </td>
                            <td> 

                                <div class="dropdown text-center">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a asp-action="Create" asp-controller="Appointment" asp-route-customerString="@item.Id" class="dropdown-item"><i class="bx bx-plus-circle me-1"></i> New Appointment</a>
                                        
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item"><i class="bx bx-detail me-1"></i> Details</a>
                                    </div>
                                </div>
                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>